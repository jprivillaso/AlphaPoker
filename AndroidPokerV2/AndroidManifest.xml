<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

      package="TVPC.poker"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.INTERNET" />
    <application android:icon="@drawable/logoalphapoker" android:label="@string/app_name">
        <activity android:name=".main"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- se le da el nombre de la clase a la que va la activity -->
		<activity android:name=".Register" android:label="@string/inserDetails"></activity>
		<activity android:name=".RegisterPin" android:label="@string/enterPin"></activity>
		<activity android:name=".Login" android:label="@string/enterPin"></activity>
		<activity android:name=".Lobby" android:label="@string/messageLoby"></activity>
		<activity android:name=".Chips" android:label="@string/numberChips"></activity>
		<activity android:name=".Play" android:label="@string/match"></activity>
		<activity android:name=".Waiting" android:label="@string/waiting"></activity>
		

    </application>
</manifest>